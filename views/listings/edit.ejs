<% layout ("/layouts/boilerplate") %>
<div class="row">
  <div class="col-8 offset-2">
    <h3>Edit a Listing</h3>
    <form
      action="/listings/<%=listing.id %>?_method=PUT"
      method="POST"
      novalidate
      class="needs-validation"
    >
      <div class="mb-3">
        <label for="title" class="form-lable">Title</label>
        <input
          type="text"
          name="listing[title]"
          value="<%=listing.title%>"
          class="form-control"
          required
        />
      </div>
      <div class="mb-3">
        <label for="description" class="form-lable">Description </label>
        <input
          type="text"
          name="listing[description]"
          class="form-control"
          required
        >
          <%=listing.description%>"
        </input>
      </div>
      <div class="mb-3">
        <label for="image" class="form-lable">Image Link</label>
        <input
          type="text"
          name="listing[image]"
          value="<%=listing.image%>"
          class="form-control"
          required
        />
      </div>
      <div class="row">
        <div class="mb-3 col-4">
          <label for="price" class="form-lable">Price</label>
          <input
            type="text"
            name="listing[price]"
            value="<%=listing.price%>"
            class="form-control"
            required
          />
        </div>
        <div class="mb-3 col-md-8">
          <label for="location" class="form-lable">Location</label>
          <input
            type="text"
            name="listing[location]"
            value="<%=listing.location%>"
            class="form-control"
            required
          />
        </div>
        <div class="mb-3">
          <label for="country" class="form-lable">Country</label>
          <input
            type="text"
            name="listing[country]"
            value="<%=listing.country%>"
            class="form-control"
            required
          />
        </div>
      </div>

      <button class="btn btn-dark add-btn mt-3">Edit</button>
      <br /><br />
    </form>
  </div>
</div>
